// packages/frontend/tsconfig.app.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.js", 
    "src/**/*.jsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}